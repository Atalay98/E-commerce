
@{
    ViewBag.Title = "Orders";
}
@using ECommerce_Project.Models
@model List<Order>


<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Siparişlerim
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş Tutarı</th>
                                <th>Sipariş Durumu</th>
                                <th>Kargo</th>
                                <th>Detay</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Order o in Model)
                            {
                                <tr>
                                    <td>@o.ID</td>
                                    <td>@o.OrderDate</td>
                                    <td>@o.TotalPrice ₺</td>
                                    <td>
                                        @if (o.Status == "Tamamlandı")
                                        {
                                            <span class="label label-success">Tamamlandı</span>
                                        }
                                        else if (o.Status == "Kargoda")
                                        {
                                            <span class="label label-warning">Kargoda</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">İptal</span>
                                        }
                                    </td>
                                    <td>@o.Cargo.CargoName</td>
                                    <td>
                                        <a class="btn btn-primary" href="/Account/OrderDetail/@o.ID">
                                            Detay
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
