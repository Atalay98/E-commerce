<body>
    <div class="container-fluid">
        <div id="body-container">
            <div class="standalone-page registration-page">
                <div class="standalone-page-logo">
                    <a href="#">
                        <img src="/Content/assets/images/required/logo-default.png" width="156" height="44" alt="Logo">
                    </a>
                </div>
                <div class="standalone-page-top-border">
                    <span class="border-block bg-color-green"></span>
                    <span class="border-block bg-color-orange"></span>
                    <span class="border-block bg-color-yellow"></span>
                    <span class="border-block bg-color-blue"></span>
                    <span class="border-block bg-color-red"></span>
                    <span class="border-block bg-color-lime"></span>
                    <span class="border-block bg-color-purple"></span>
                </div>
                <div class="standalone-page-block">
                    <div class="row">
                        <div class="col-xs-12">
                            <h2 class="heading">
                                <span aria-hidden="true" class="icon icon-user"></span>
                                <span class="main-text">
                                    Create A New Account
                                </span>
                            </h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <form role="form" class="registration-form form-horizontal bv-form" method="post" action="/Account/Register" novalidate="novalidate">
                                <button type="submit" class="bv-hidden-submit" style="display: none; width: 0px; height: 0px;"></button>
                                <div class="form-group has-feedback" id="myDiv">
                                    <label for="inputUsername" class="col-sm-3 control-label">Username</label>
                                    <div class="col-sm-9">
                                        <input autocomplete="off" class="form-control" id="inputUsername" placeholder="Username" type="text" name="username" data-bv-field="username" onkeyup="checkUsername()">
                                        <i id="checkicon" class="icon " data-bv-icon-for="username"></i>

                                        <small class="help-block" data-bv-validator="notEmpty" data-bv-for="username" data-bv-result="NOT_VALIDATED" style="display: none;">Username is required and cannot be empty</small>
                                        <small class="help-block" data-bv-validator="stringLength" data-bv-for="username" data-bv-result="NOT_VALIDATED" style="display: none;">The Username must be between 3 and 16 characters long</small>
                                        <small class="help-block" data-bv-validator="regexp" data-bv-for="username" data-bv-result="NOT_VALIDATED" style="display: none;">The full name can consist of alphanumeric characters and spaces only</small>
                                        <small id="Status"></small>
                                    </div>
                                </div>
                                <script>
                                    function delSpace(x) {
                                        return x.replace(/^\s+|\s+$/gm, '');
                                    }

                                    function checkUsername() {
                                        var x = delSpace($("#inputUsername").val());
                                        $("#inputUsername").val().replace(x);

                                        if (x != null && x.length > 2) {

                                            $("#Status").html("Checking...");
                                            $.post("@Url.Action("checkUsernameTaken", "Account")",
                                                {
                                                    name: x
                                                },
                                                function (data) {
                                                    if (data == 0) {
                                                        $("#Status").html('<font color="Green">Available !. you can take it.</font>');
                                                        $("#inputUsername").css("border-color", "Green");
                                                        $('#checkicon').removeClass("icon icon-cross").trigger('classChange');
                                                        $('#checkicon').addClass("icon icon-check").trigger('classChange');

                                                    }
                                                    else {
                                                        $("#Status").html('<font color="#D90F0">That name is taken.Try Another.</font>');
                                                        $("#inputUsername").css("border-color", "Red");

                                                        $('#myDiv').removeClass("has-success").trigger('classChange');
                                                        $('#myDiv').addClass("has-error").trigger('classChange');
                                                        $('#checkicon').removeClass("icon icon-cross").trigger('classChange');
                                                        $('#checkicon').addClass("icon icon-check").trigger('classChange');
                                                    }
                                                });

                                        }
                                        else {
                                            if (x == null) {
                                                $("#Status").html('<font color="#D90F0"></font>');
                                            }
                                            else {
                                                $("#Status").html('<font color="#D90F0"></font>');
                                            }
                                            $("#inputUsername").css("border-color", "Red");
                                            $('#myDiv').removeClass("has-success").trigger('classChange');
                                            $('#myDiv').addClass("has-error").trigger('classChange');
                                        }

                                    }
                                </script>
                                <div class="form-group has-feedback">
                                    <label for="inputEmail" class="col-sm-3 control-label">Email</label>
                                    <div class="col-sm-9">
                                        <input autocomplete="off" class="form-control" id="inputEmail" placeholder="Email" type="email" name="email" data-bv-field="email"><i class="form-control-feedback" data-bv-icon-for="Mail" style="display: none;"></i>
                                        <small class="help-block" data-bv-validator="notEmpty" data-bv-for="email" data-bv-result="NOT_VALIDATED" style="display: none;">The email address is required and cannot be empty</small><small class="help-block" data-bv-validator="emailAddress" data-bv-for="email" data-bv-result="NOT_VALIDATED" style="display: none;">The email address is not a valid</small>
                                    </div>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="inputPassword" class="col-sm-3 control-label">Password</label>
                                    <div class="col-sm-9">
                                        <input autocomplete="off" class="form-control" id="inputPassword" placeholder="Password" type="password" name="password" data-bv-field="password"><i class="form-control-feedback" data-bv-icon-for="Password" style="display: none;"></i>
                                        <small class="help-block" data-bv-validator="notEmpty" data-bv-for="password" data-bv-result="NOT_VALIDATED" style="display: none;">The password is required and cannot be empty</small><small class="help-block" data-bv-validator="stringLength" data-bv-for="password" data-bv-result="NOT_VALIDATED" style="display: none;">The password must be between 8 and 30 characters long</small>
                                    </div>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="inputPasswordConfirm" class="col-sm-3 control-label">Confirm Password</label>
                                    <div class="col-sm-9">
                                        <input autocomplete="off" class="form-control" id="inputPasswordConfirm" placeholder="Confirm Password" type="password" name="passwordConfirm" data-bv-field="passwordConfirm"><i class="form-control-feedback" data-bv-icon-for="passwordConfirm" style="display: none;"></i>
                                        <small class="help-block" data-bv-validator="identical" data-bv-for="passwordConfirm" data-bv-result="NOT_VALIDATED" style="display: none;">The password and its confirm are not the same</small>
                                    </div>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="inputName" class="col-sm-3 control-label">Name</label>
                                    <div class="col-sm-9">
                                        <input autocomplete="off" class="form-control" id="inputName" placeholder="Name" type="text" name="Name" required>
                                    </div>
                                </div>
                                <div class="form-group has-feedback">
                                    <label for="inputSurname" class="col-sm-3 control-label">Surname</label>
                                    <div class="col-sm-9">
                                        <input autocomplete="off" class="form-control" id="inputSurname" placeholder="Surname" type="text" name="Surname" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-9">
                                        <input type="radio" id="cus" name="role" value="customer" checked="checked">
                                        <label for="cus">Customer</label><br>
                                        <input type="radio" id="seller" name="role" value="seller">
                                        <label for="seller">Seller</label><br>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-3 col-sm-9">
                                        <button type="submit" class="btn btn-success">Create Account</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="change-section">
                                <h3 class="heading">Already Have An Account?</h3>
                                <a href="/Security/Login" class="btn btn-default btn-block">Sign In</a>
                            </div>
                        </div>
