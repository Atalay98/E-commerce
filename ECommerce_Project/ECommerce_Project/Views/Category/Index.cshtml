
@{
    ViewBag.Title = "Index";
}
@using ECommerce_Project.Models
@model List<Category>

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Kategoriler
                </div>
                <div class="block-controls">
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="/Category/Ekle" class="btn btn-success rounded">Yeni Kategori Ekle</a>
                    }

                </div>
            </div>

            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th style="text-align:center"></th>
                                <th style="text-align:center">Kategori Adı</th>
                                <th style="text-align:center">Ürün Sayısı</th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th style="text-align:center">Güncelle</th>
                                    <th style="text-align:center">Sil</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @{int index = 0; }
                            @foreach (Category u in Model)
                            {
                                index += 1;
                                <tr>
                                    <td>
                                        @index
                                    </td>
                                    <th style="text-align:center">@u.CategoryName</th>
                                    <td style="text-align:center">
                                        @u.Products.Count(x => x.isActive == true)
                                    </td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td style="text-align:center">
                                            <a href="#" class="btn btn-primary">Güncelle</a>
                                        </td>
                                        <td style="text-align:center">
                                            <a href="/Product/Sil/@u.ID" class="btn btn-danger">Sil</a>
                                        </td>
                                    }

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
